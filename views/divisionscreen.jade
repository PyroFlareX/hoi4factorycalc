            form.pure-form.pure-form-aligned
                fieldset
                    .pure-control-group
                        label(for='fe') Factory Efficiency Bonus
                        input#fe(type='number', min='0', max='100', step='1', value='0')
                        span.pure-form-message-inline %
                    .pure-control-group
                        label(for='pe') Production Efficiency
                        input#pe(type='number', min='50', max='100', step='1', value='50')
                        span.pure-form-message-inline %
                    .pure-control-group
                        label(for='outputper') Output in
                        input#time(type='number', min='1', max='100', step='1', value='1')
                        select#outputper
                            option(value='30') Month(s)
                            option(value='1') Day(s)
                            option(value='365') Year(s)
            form.pure-form.pure-form-aligned
                fieldset
                    .pure-control-group
                        label Set as Parameter
                        button.pure-button#aodb(type='button' disabled=true onclick="enableAOD()") Amount of Divisions
                    .pure-control-group
                        label(for='aod') Amount of Divisions
                        input#aod(type='number', min='1', max='1000', step='1', value='1')
            form.pure-form.pure-form-aligned
                fieldset
                    .pure-control-group
                        label Set as Parameter
                        button.pure-button#aofb(type='button' onclick='enableAOF()') Amount of Factories
                    .pure-control-group
                        label(for='aof') Amount of Factories
                        input#aof(type='number', min='1', max='1000', step='1', value='5' disabled=true)
                    .pure-controls
                        button.pure-button.pure-button-primary(type='button', onclick='sendCalcRequest()') Calculate!
